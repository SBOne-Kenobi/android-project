<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.FirstApp.VerificationSlot" parent="">
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_width">@dimen/verification_code_slot_width</item>
        <item name="android:layout_height">@dimen/verification_code_slot_height</item>
        <item name="android:background">@drawable/selector_bg_verification_code_slot</item>
    </style>

    <style name="Widget.FirstApp.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:minHeight">56dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Widget.FirstApp.Button.Primary">
        <item name="backgroundTint">@color/brand_orange</item>
    </style>

    <style name="Widget.FirstApp.Button.Secondary">
        <item name="backgroundTint">@color/brand_green</item>
    </style>

    <style name="Widget.FirstApp.Button.LinkButton" parent="Widget.MaterialComponents.Button">
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:gravity">center</item>
        <item name="android:maxWidth">300dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Body1</item>
        <item name="android:textColor">@color/brand_blue</item>
    </style>
    
</resources>